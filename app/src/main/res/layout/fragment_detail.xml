<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ionutcristian.seriesadicted.DetailActivity$PlaceholderFragment">

    <ImageButton
        android:title="Operation"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:id="@+id/but"
        android:background="@drawable/plus"
        android:layout_gravity="right"
        android:onClick="sendToMySeries"
        />

    <TextView
        android:id="@+id/detail_text"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <ImageButton
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:id="@+id/imdblogo"
        android:background="@drawable/imdb_logo"
        android:layout_gravity="center_horizontal"
        android:onClick="sendToImdb"
        android:layout_margin="20sp"
        />


</LinearLayout>
